<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_128pt"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="96pt"
        android:layout_height="96pt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_12pt"
        android:padding="@dimen/margin_24pt"
        android:src="@drawable/icon_back" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="96pt"
        android:layout_height="96pt"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_24pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1pt"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDivider" />

</RelativeLayout>