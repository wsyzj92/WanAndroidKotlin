<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="980pt"
        android:layout_height="500pt"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/corner_12pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64pt"
                android:layout_marginLeft="@dimen/margin_48pt"
                android:layout_marginTop="@dimen/margin_48pt"
                android:layout_marginRight="@dimen/margin_48pt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48pt"
                    android:layout_height="48pt"
                    android:src="@drawable/icon_login_head" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_24pt"
                    android:background="@color/white"
                    android:hint="用户名"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textCursorDrawable="@drawable/shape_text_cursor_drawable"
                    android:textSize="@dimen/textSize_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1pt"
                android:layout_marginLeft="@dimen/margin_48pt"
                android:layout_marginTop="@dimen/margin_24pt"
                android:layout_marginRight="@dimen/margin_48pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64pt"
                android:layout_marginLeft="@dimen/margin_48pt"
                android:layout_marginTop="@dimen/margin_48pt"
                android:layout_marginRight="@dimen/margin_48pt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48pt"
                    android:layout_height="48pt"
                    android:src="@drawable/icon_login_password" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_24pt"
                    android:background="@color/white"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textColorHint="@color/colorSecondaryText"
                    android:textCursorDrawable="@drawable/shape_text_cursor_drawable"
                    android:textSize="@dimen/textSize_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_1pt"
                android:layout_marginLeft="@dimen/margin_48pt"
                android:layout_marginTop="@dimen/margin_24pt"
                android:layout_marginRight="@dimen/margin_48pt" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_login"
                android:layout_width="800pt"
                android:layout_height="@dimen/navigation_128pt"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/corner_12pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>